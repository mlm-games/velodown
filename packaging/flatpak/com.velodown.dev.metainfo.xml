<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.velodown.dev</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>
  <name>VeloDown</name>
  <summary>A blazing-fast download manager built with Rust and Tauri</summary>
  <description>
    <p>VeloDown is a high-performance download manager that makes downloading files faster and more reliable. Built with Rust for speed and Tauri for a modern, lightweight interface.</p>
    <p>Features:</p>
    <ul>
      <li>Multi-threaded downloads with configurable connections</li>
      <li>Pause and resume support</li>
      <li>Automatic retry for failed downloads</li>
      <li>Real-time progress tracking</li>
      <li>Smart file detection from URLs</li>
      <li>Flexible save locations</li>
      <li>Desktop notifications</li>
      <li>Dark theme interface</li>
      <li>System tray integration</li>
    </ul>
  </description>
  <launchable type="desktop-id">com.velodown.dev.desktop</launchable>
  <url type="homepage">https://github.com/mlm-games/velodown</url>
  <url type="bugtracker">https://github.com/mlm-games/velodown/issues</url>
  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/mlm-games/velodown/main/screenshots/main.png</image>
      <caption>Main download list interface</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/mlm-games/velodown/main/screenshots/add-download.png</image>
      <caption>Adding a new download</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/mlm-games/velodown/main/screenshots/settings.png</image>
      <caption>Configuration settings</caption>
    </screenshot>
  </screenshots>
  <releases>
    <release version="{{VERSION}}" date="{{RELEASE_DATE}}">
      <description>
        <p>{{RELEASE_NOTES}}</p>
      </description>
    </release>
  </releases>
  <content_rating type="oars-1.1">
    <content_attribute id="social-info">mild</content_attribute>
  </content_rating>
  <developer id="com.mlmgames">
    <name>MLM Games</name>
  </developer>
  <provides>
    <binary>velodown</binary>
  </provides>
</component>
